#cloud-config
hostname: ${hostname}
fqdn: ${hostname}.anilankemlab.lan
preserve_hostname: false
manage_etc_hosts: true
users:
  - default
  - name: anilankem
    password: anilankem
    groups: sudo
    shell: /bin/bash
    sudo: ["ALL=(ALL) NOPASSWD:ALL"]
    ssh-authorized-keys:
      - ${ssh_key_1}
      - ${ssh_key_2}

runcmd:
  - hostnamectl set-hostname ${hostname}
  - sed -i 's/127.0.1.1.*/127.0.1.1 ${hostname}.anilankemlab.lan ${hostname}/' /etc/hosts
